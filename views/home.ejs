<%- include("partials/header", { title, nav, user }) %>

<main>
  <h1>Welcome to Our Inventory!</h1>

  <% if (message) { %>
    <p class="message"><%= message %></p>
  <% } %>

  <section class="inventory-cards">
    <% if (inventory.length > 0) { %>
      <% inventory.forEach(vehicle => { %>
        <div class="card">
          <img src="<%= vehicle.image_path %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
          <h3><%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
          <p>Year: <%= vehicle.inv_year %></p>
          <p>Price: $<%= vehicle.inv_price %></p>

          <% if (user && (user.role === "Admin" || user.role === "Employee")) { %>
            <a href="/inventory/edit/<%= vehicle.inv_id %>">Edit</a>
            <form action="/inventory/delete/<%= vehicle.inv_id %>" method="post" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p>No vehicles available right now.</p>
    <% } %>
  </section>
</main>

<%- include("partials/footer") %>


