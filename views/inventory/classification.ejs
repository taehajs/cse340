<%- include("../partials/header", { 
  title: title, 
  nav: typeof nav !== 'undefined' ? nav : null, 
  user: typeof user !== 'undefined' ? user : null 
}) %>

<main>
  <h1><%= title %> Vehicles</h1>

  <section class="inventory-cards">
    <% if (inventory && inventory.length > 0) { %>

      <% inventory.forEach(vehicle => { %>

        <a href="/inv/detail/<%= vehicle.inv_id %>" class="vehicle-link">
          <div class="card">
            <img src="<%= vehicle.image_path %>" 
                 alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
            <h3><%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
            <p>Year: <%= vehicle.inv_year %></p>
            <p>Price: $<%= vehicle.inv_price %></p>
          </div>
        </a>

      <% }) %>

    <% } else { %>
      <p>No vehicles in this classification.</p>
    <% } %>
  </section>
</main>

<%- include("../partials/footer") %>
